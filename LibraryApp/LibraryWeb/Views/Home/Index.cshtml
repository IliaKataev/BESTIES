@model IEnumerable<LibraryWeb.Models.BookDto>

<h2>Библиотека</h2>

<div style="display: flex; gap: 20px; height: 600px;">
    <!-- Левая колонка: поиск -->
    @Html.Partial("SearchPanel")

    <!-- Правая колонка -->
    <div style="flex: 1; display: flex; flex-direction: column; border: 1px solid #ccc;">
        @Html.Partial("BooksList", Model)
        @Html.Partial("BookDetails")
    </div>
    <div class="modal fade" id="authorsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Авторы</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <select id="authors-select" class="form-select mb-3">
                        <option value="">Выберите автора</option>
                    </select>

                    <div id="author-details">
                        <p class="text-muted">Выберите автора, чтобы увидеть информацию</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
        <script src="~/js/home.js"></script>
}
