@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card border-secondary" style="width: 400px;">
        <div class="card-header bg-white border-bottom border-secondary d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Login</h5>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">Username</label>
                    <input name="username" id="username" type="text" class="form-control" placeholder="Введите имя пользователя" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">Password</label>
                    <input name="password" id="password" type="password" class="form-control" placeholder="Введите пароль" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">Login</button>
                    <a class="btn btn-secondary px-4" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>

                @if (ViewData["Error"] != null)
                {
                    <p class="text-danger mt-3 mb-0">@ViewData["Error"]</p>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("login-btn").addEventListener("click", () => {
            const username = document.getElementById("username").value.trim();
            const password = document.getElementById("password").value.trim();
            const errorLabel = document.getElementById("login-error");

            if (!username || !password) {
                errorLabel.textContent = "Введите имя пользователя и пароль";
                return;
            }

            // Проверка admin
            if (username === "admin" && password === "admin123") {
                localStorage.setItem("loggedIn", "true");
                window.location.href = "/Home/Index";
            } else {
                errorLabel.textContent = "Неверное имя пользователя или пароль";
            }
        });

        document.getElementById("cancel-btn").addEventListener("click", () => {
            window.location.href = "/Home/Index";
        });
    </script>
}
