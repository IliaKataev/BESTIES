@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100"> <div class="card border-secondary" style="width: 400px;"> <div class="card-header bg-white border-bottom border-secondary d-flex justify-content-between align-items-center"> <div> <div class="small text-secondary fw-bold">BOOKMASTER</div> <div class="small text-secondary">3000 <span class="badge rounded-pill bg-success">&nbsp;</span></div> </div> <div class="d-flex align-items-center"> <h5 class="mb-0 me-3">Login</h5> <button type="button" class="btn-close"></button> </div> </div>
    <div-- class="card-body bg-light">
        <form id="login-form">
            <div class="mb-3">
                <label for="username" class="form-label fw-semibold">Phone number</label>
                <input id="username" type="text" class="form-control" placeholder="Введите номер пользователя" />
            </div>

            <!--div class="mb-3">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input id="password" type="password" class="form-control" placeholder="Введите пароль" />
            </div-->

            <div class="d-flex justify-content-between mt-4">
                <button type="button" id="login-btn" class="btn btn-success px-4">Login</button>
                <button type="button" id="cancel-btn" class="btn btn-success px-4">Cancel</button>
            </div>

            <p id="login-error" class="text-danger mt-3 mb-0"></p>
        </form>
    </div>
</div>

</div>

@section Scripts {
    <script>
    document.getElementById("login-btn").addEventListener("click", async () => {
    const username = document.getElementById("username").value.trim();
    const password = document.getElementById("password").value.trim();
    const errorLabel = document.getElementById("login-error");

            if (!username || !password) {
                errorLabel.textContent = "Введите имя пользователя и пароль";
                return;
            }

            const response = await fetch("https://localhost:7055/api/client/login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ username, password })
            });

            if (response.ok) {
                const client = await response.json();
                localStorage.setItem("client", JSON.stringify(client));
                window.location.href = "/Home/Index";
            } else {
                errorLabel.textContent = "Неверное имя пользователя или пароль";
            }
        });

        document.getElementById("cancel-btn").addEventListener("click", () => {
            window.location.href = "/Home/Index";
        });
    </script>


}